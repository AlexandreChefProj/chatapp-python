Vagrant.configure("2") do |config|
    # Configuration de la machine Flask
    config.vm.define "flask-app" do |app|
      app.vm.box = "bento/ubuntu-18.04"
      app.vm.hostname = "flask-app"
      app.vm.network "private_network", ip: "192.168.56.10"
      app.vm.network "forwarded_port", guest: 5000, host: 5000 
      
      # Configuration des ressources de la VM
      app.vm.provider "virtualbox" do |vb|
        vb.name = "flask-app-vm"
        vb.memory = 1024 # Augmente la RAM pour de meilleures performances
        vb.cpus = 2
      end
      
      # Synchronisation du dossier iac/ avec /vagrant
      app.vm.synced_folder ".", "/vagrant", type: "virtualbox"
      
      # Configuration Ansible
      app.vm.provision "ansible_local" do |ansible|
        ansible.playbook = "/vagrant/playbooks/setup.yml"
      end
    end
end
